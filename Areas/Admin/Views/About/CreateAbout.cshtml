@using Task_15.Areas.Admin.Dto.About_Dto
@model CreateAbout_Dto
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Create Product</div>
            <hr>
            <form asp-controller="About" asp-action="CreateAbout" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Title"></label>
                    <input asp-for="@Model.Title" class="form-control" id="input-1" placeholder="Enter Your Title">
                    <span asp-validation-for="@Model.Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.File"></label>
                   
                    <input asp-for="@Model.File" class="form-control" id="input-2" placeholder="Enter Your File">
                    <span asp-validation-for="@Model.FilePath"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description">Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" style=" resize:none !important;  height:30vh!important"></textarea>
                    <span asp-validation-for="@Model.Description"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i> Create</button>
                </div>
            </form>
        </div>
    </div>
</div>