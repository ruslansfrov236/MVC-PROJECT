@using Task_15.Areas.Admin.Dto.AboutHeader_Dto


@model CreateAboutHeader_Dto;

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Create AboutHeader</div>
            <hr>
            <form asp-controller="AboutHeader" asp-action="CreateAboutHeader"  asp-area="Admin" method="post">
                <div class="form-group">
                    <label asp-for="@Model.Title"></label>
                    <input asp-for="@Model.Title" class="form-control" id="input-1" placeholder="Enter Your Title">
                    <span asp-validation-for="@Model.Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.FilePath"></label>
                    <input asp-for="@Model.FilePath" class="form-control" placeholder="Enter Your File">
                    <span asp-validation-for="@Model.FilePath"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Text"></label>
                    <input asp-for="@Model.Text" class="form-control" placeholder="Enter Your File">
                    <span asp-validation-for="@Model.Text"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Url"></label>
                    <input asp-for="@Model.Url" class="form-control" placeholder="Enter Your File">
                    <span asp-validation-for="@Model.Url"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.UrlText"></label>
                    <input asp-for="@Model.UrlText" class="form-control" placeholder="Enter Your File">
                    <span asp-validation-for="@Model.UrlText"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description">Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" style="resize:none !important;  height:30vh!important"></textarea>
                    <span asp-validation-for="@Model.Description"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i> Create</button>
                </div>
            </form>
        </div>
    </div>
</div>