@using Task_15.Models.Dto.Pricing_Dto


@model UpdatePricing_Dto
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Create Contact</div>
            <hr>
            <form asp-controller="Pricing" asp-action="Update" asp-route-id="@Model.Id" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Title"></label>
                    <input asp-for="@Model.Title" class="form-control" id="input-1" placeholder="Enter Your Title">
                    <span asp-validation-for="@Model.Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.TotalMemory"></label>
                    <input asp-for="@Model.TotalMemory" class="form-control" id="input-2" placeholder="Enter Your File">
                    <span asp-validation-for="@Model.TotalMemory"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.PricngName"></label>
                    <input asp-for="@Model.PricngName" class="form-control" id="input-2" placeholder="Enter Your File">
                    <span asp-validation-for="@Model.PricngName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.PricingUser"></label>
                    <input asp-for="@Model.PricingUser" class="form-control" id="input-2" placeholder="Enter Your File">
                    <span asp-validation-for="@Model.PricingUser"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.PriceCategory"></label>
                    <input asp-for="@Model.PriceCategory" class="form-control" id="input-2" placeholder="Enter Your File">
                    <span asp-validation-for="@Model.PriceCategory"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Price"></label>
                    <input asp-for="@Model.Price" class="form-control" id="input-2" placeholder="Enter Your File">
                    <span asp-validation-for="@Model.Price"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i> Create</button>
                </div>
            </form>
        </div>
    </div>
</div>